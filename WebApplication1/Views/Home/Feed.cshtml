
@{
    Layout = null;
}
<div class="row" infinite-scroll="loadMore()">
    <div class="col-sm-6 colCards"
         ng-repeat="image in images" id="{{image.id}}" >
        <div class="card imageCards" style="width: 100%;" ng-click="open(image.id)">
            <img src="~/images/{{image.filePath}}" />
            <div class="text" id="text_{{image.id}}">
                <p>{{image.location}}</p>
            </div>
        </div>
        <div class="infomation row" id="info_{{image.id}}" ng-click="open(image.id)" style="display:none;">
            <div class="row">
                <div class="data">
                    <i class="fa fa-map-marker icon" aria-hidden="true"></i><span>{{image.location}}</span>
                    <i class="fa fa-globe pull-right icon" aria-hidden="true"></i><span class="pull-right">{{image.country}}</span>             
                </div>
                <div class="row rowtitle">
                    <h2>{{image.title}}</h2>
                </div>
                <div class="row" ng-if="image.description != null">
                    <p>{{image.description}}</p>
                </div>
                    <p style="text-align:center">{{image.taken| date:'EEEE dd MMMM yyyy'}}</p>
            </div>
        </div>
    </div>
    <div class="row loadingFeed">
        <img class="centerBlock" src="~/images/Earth.svg" />
    </div>
</div>
